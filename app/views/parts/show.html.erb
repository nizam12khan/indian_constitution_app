<div class="bg-white p-6 rounded shadow">
  <h2 class="text-2xl font-bold mb-2 text-gray-800">Part <%= @part.number %>: <%= @part.title %></h2>
  <h3 class="text-xl font-semibold mb-3 text-gray-700">Articles</h3>
  <turbo-frame id="articles">
    <ul class="grid gap-4 sm:grid-cols-2">
      <% @articles.each do |article| %>
        <li class="bg-gray-50 p-4 rounded shadow hover:shadow-lg transition">
          <%= link_to "Article #{article.number}: #{article.title}", article_path(article), class: "text-blue-600 hover:underline" %>
        </li>
      <% end %>
    </ul>
  </turbo-frame>
</div>